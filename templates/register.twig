<!doctype html>
<html>
  {% include 'partials/head.twig' %}
  <body class="bg-light">
    <br/><br/>
    <main class="container">
      <div class="row">
        <div class="col-md-4 offset-md-4">
          {% set notvalid = (register.response.success == false ) ? 'was-validated' : '' %}
          <form id="register-form" action="register.php" method="post" class="{{notvalid}}">
            <h4>Register for an account</h4>
            <div class="form-group">
              <label for="username">Username</label>
              {% set username = (register.username) ? register.username : '' %}
              {% set validUsername = ( register.errors.username ) ? 'is-invalid' : '' %}
              <input type="username" id="username" name="username" placeholder="username" class="form-control {{validUsername}}" value="{{username}}" autocomplete="new-password">
              {% if register.errors.username %}
                <span class="invalid-feedback">{{register.errors.username}}</span>
              {% endif %}
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              {% set email = (register.email) ? register.email : '' %}
              {% set validEmail = ( register.errors.email ) ? 'is-invalid' : '' %}
              <input type="email" id="email" name="email" placeholder="you@example.com" class="form-control {{validEmail}}" value="{{email}}" autocomplete="new-password">
              {% if register.errors.email %}
                <span class="invalid-feedback">{{register.errors.email}}</span>
              {% endif %}
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              {% set password = (register.password) ? register.password : '' %}
              {% set validPassword = ( register.errors.password ) ? 'is-invalid' : '' %}
              <input type="password" id="password" name="password" placeholder="minimum 8 characters" class="form-control {{validPassword}}" autocomplete="new-password">
              {% if register.errors.password %}
                <span class="invalid-feedback">{{register.errors.password}}</span>
              {% endif %}
            </div>
            <button class="btn btn-block btn-primary" type="submit">Register</button>
            <a class="btn btn-block btn-secondary" href="index.php">Home</a>
            {% if register.success %}
              <div class="alert alert-success" role="alert">
                Your account has been created!
              </div>
            {% elseif register.errors.account or register.errors.system %}
              <div class="alert alert-warning" role="alert">
                {{register.errors.account}}
              </div>
            {% endif %}
          </form>
          <p class="mt-5 mb-3 text-muted text-center">Â© ProjectWebsite-DevBlog 2019</p>
        </div>
      </div>
    </main>
  </body>
</html>